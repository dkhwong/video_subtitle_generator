{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [



        {
            "name": "Python Debugger: subtitle with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "vocals_mono.TextGrid",
                "vocals_mono..ass",
                "--style", "Voice1",
                "--phrase-marker", "<eps>",
                "--min-phrase-gap", "4",
                "--target-duration", "10",
                "--shift-time", "-1"
            ]
        }
    ]
}