{
    "version": "0.2.0",
    "configurations": [



        {
            "name": "Python Debugger: subtitle with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "vocals_mono.TextGrid",
                "vocals_mono.ass",
                "--style", "Default",
                "--phrase-marker", "<eps>",
                "--min-phrase-gap", "4",
                "--target-duration", "10",
                "--shift-time", "-1",
                "--charset", "ascii"
            ]
        }
    ]
}